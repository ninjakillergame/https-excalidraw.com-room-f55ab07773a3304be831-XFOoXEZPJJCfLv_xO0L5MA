import subprocess

def scan_wifi_networks():
    try:
        result = subprocess.run(['nmcli', 'device', 'wifi', 'list'], capture_output=True, text=True)
        if result.returncode == 0:
            print("Redes Wi-Fi disponibles:")
            print(result.stdout)
        else:
            print("Error al escanear redes Wi-Fi.")
    except Exception as e:
        print(f"Error: {str(e)}")

def main():
    print("Escaneando redes Wi-Fi disponibles...")
    scan_wifi_networks()

if __name__ == "__main__":
    main()
